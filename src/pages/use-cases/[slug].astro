---
import BaseLayout from "../../components/layout/BaseLayout.astro";
import Header from "../../components/layout/Header.astro";
import Footer from "../../components/layout/Footer.astro";
import FeatureIcon from "../../components/ui/FeatureIcon.astro";
import { USE_CASES, CTA_BUTTONS } from "../../config/site";
import ColdStorageFlowchart from "@/components/usecases/industrial-integration-flowchart";
import { SmartStreetlightFlowchart } from "@/components/usecases/smart-city-flowchart";
import SmartWaterFlowchart from "@/components/usecases/smart-water-flowchart";


export function getStaticPaths() {
  return USE_CASES.map((uc) => ({
    params: { slug: uc.slug },
    props: { useCase: uc },
  }));
}

const useCase = Astro.props.useCase ?? USE_CASES.find((uc) => uc.slug === Astro.params.slug);

if (!useCase) {
  return Astro.redirect("/use-cases/");
}

---

<BaseLayout
  title={`${useCase.title} — Magistrala IoT Platform`}
  description={useCase.summary}
>
  <Header />
  <main>
    <!-- Hero -->
    <section class="section-padding bg-white">
      <div class="max-w-7xl mx-auto">
        <a href="/use-cases/" class="text-sm text-neutral-500 hover:text-[#073763] mb-6 inline-block">&larr; All use cases</a>

        <div class="grid lg:grid-cols-2 gap-10 lg:gap-16 items-center">
          <div>
            <div class="flex items-center gap-4 mb-6">
              <FeatureIcon icon={useCase.icon} />
              <h1 class="text-4xl lg:text-5xl font-bold text-[#073763]">{useCase.title}</h1>
            </div>
            <p class="text-xl text-neutral-600 leading-relaxed font-medium max-w-3xl mb-8">
              {useCase.description}
            </p>

            <div class="flex flex-wrap gap-3">
              <a
                href={CTA_BUTTONS.primary.href}
                target="_blank"
                rel="noopener noreferrer"
                class="px-6 py-3 bg-[#073763] text-white font-semibold rounded-lg hover:bg-[#0a4a7a] transition-colors"
              >
                Live Demo
              </a>
              <a
                href={CTA_BUTTONS.secondary.href}
                class="px-6 py-3 border-2 border-[#073763] text-[#073763] font-semibold rounded-lg hover:bg-[#073763] hover:text-white transition-colors"
              >
                Talk to an Expert
              </a>
            </div>
          </div>

          {useCase.dashboard?.image && (
            <div class="screenshot-frame">
              <div class="screenshot-frame-bar">
                <span class="screenshot-frame-dot" />
                <span class="screenshot-frame-dot" />
                <span class="screenshot-frame-dot" />
              </div>
              <img
                src={useCase.dashboard.image}
                alt={useCase.dashboard.alt || useCase.title}
                loading="eager"
              />
            </div>
          )}
        </div>
      </div>
    </section>

