---
import BaseLayout from '../../components/layout/BaseLayout.astro';
import Header from '../../components/layout/Header.astro';
import Footer from '../../components/layout/Footer.astro';
import Card from '../../components/ui/Card.astro';
import FeatureIcon from '../../components/ui/FeatureIcon.astro';
import { USE_CASES } from '../../config/site';
---

<BaseLayout title="Use Cases â€” Magistrala IoT Platform" description="Explore how Magistrala is used across industries for IoT device management, monitoring, and data processing.">
  <Header />
  <main>
    <section class="section-padding bg-white">
      <div class="max-w-7xl mx-auto">
        <div class="max-w-2xl mb-14">
          <h1 class="mb-4">Use Cases</h1>
          <p class="text-lg text-neutral-600">
            See how teams across industries use Magistrala to connect devices, process data, and automate operations.
          </p>
        </div>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {
            USE_CASES.map((uc) => (
              <Card>
                <FeatureIcon icon={uc.icon} class="mb-4" />
                <h3 class="text-lg font-semibold mb-2 text-[#04203a]">{uc.title}</h3>
                <p class="text-sm text-neutral-500 leading-relaxed mb-4">{uc.summary}</p>
                <a href={`/use-cases/${uc.slug}/`} class="text-sm font-medium text-[#073763] hover:underline">
                  Learn more &rarr;
                </a>
              </Card>
            ))
          }
        </div>
      </div>
    </section>
  </main>
  <Footer />
</BaseLayout>
