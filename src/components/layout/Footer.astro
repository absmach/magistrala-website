---
import { SOCIAL, CONTACT, CTA_BUTTONS } from "../../config/site";
import { NEWSLETTER_CONTENT } from "../../config/home";
import { Image } from "astro:assets";
import logo from "../../assets/logos/Magistrala_logo_landscape_white.svg";
---

<footer class="bg-[#073763] text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <div>
        <div class="shrink-0 mb-2">
          <a href="/">
            <Image src={logo} alt="Magistrala" class="w-56" loading="eager" />
          </a>
        </div>
        <p class="text-sm text-blue-200 mb-5 leading-relaxed">
          Secure, scalable platform for device management, real-time messaging,
          data processing, and visualization.
        </p>
        <div class="flex gap-4">
          <a
            href={SOCIAL.twitter}
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Twitter"
            class="text-blue-200 hover:text-white transition-colors"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"
              ><path
                d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
              ></path></svg
            >
          </a>
          <a
            href={SOCIAL.linkedin}
            target="_blank"
            rel="noopener noreferrer"
            aria-label="LinkedIn"
            class="text-blue-200 hover:text-white transition-colors"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"
              ><path
                d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
              ></path></svg
            >
          </a>
          <a
            href={SOCIAL.github}
            target="_blank"
            rel="noopener noreferrer"
            aria-label="GitHub"
            class="text-blue-200 hover:text-white transition-colors"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"
              ><path
                fill-rule="evenodd"
                d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                clip-rule="evenodd"></path></svg
            >
          </a>
          <a
            href={SOCIAL.youtube}
            target="_blank"
            rel="noopener noreferrer"
            aria-label="YouTube"
            class="text-blue-200 hover:text-white transition-colors"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"
              ><path
                d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"
              ></path></svg
            >
          </a>
          <a
            href={SOCIAL.matrix}
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Matrix Chat"
            class="text-blue-200 hover:text-white transition-colors"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"
              ><path
                d="M.632.55v22.9H2.28V24H0V0h2.28v.55zm7.043 7.26v1.157h.033c.309-.443.683-.784 1.117-1.024.433-.245.936-.365 1.5-.365.54 0 1.033.107 1.481.314.448.208.785.582 1.02 1.108.254-.374.6-.706 1.034-.992.434-.287.95-.43 1.546-.43.453 0 .872.056 1.26.167.388.11.716.286.993.53.276.245.489.559.646.951.152.392.23.863.23 1.417v5.728h-2.349V11.52c0-.286-.01-.559-.032-.812a1.755 1.755 0 0 0-.18-.66 1.106 1.106 0 0 0-.438-.448c-.194-.11-.457-.166-.785-.166-.332 0-.6.064-.803.189a1.38 1.38 0 0 0-.48.499 1.946 1.946 0 0 0-.231.696 5.56 5.56 0 0 0-.06.785v4.768h-2.35v-4.8c0-.254-.004-.503-.018-.752a2.074 2.074 0 0 0-.143-.688 1.052 1.052 0 0 0-.415-.503c-.194-.125-.476-.19-.854-.19-.111 0-.259.024-.439.074-.18.051-.36.143-.53.282-.171.138-.319.337-.439.595-.12.259-.18.6-.18 1.02v4.966H5.46V7.81zm15.693 15.64V.55H21.72V0H24v24h-2.28v-.55z"
              ></path></svg
            >
          </a>
        </div>
      </div>

      <div>
        <h5 class="text-lg font-semibold mb-4 text-white">Contact</h5>
        <ul class="space-y-3 text-sm text-blue-200">
          <li>
            <a
              href={`mailto:${CONTACT.email}`}
              class="hover:text-white transition-colors"
            >
              {CONTACT.email}
            </a>
          </li>
          <li>
            <a
              href={SOCIAL.matrix}
              target="_blank"
              rel="noopener noreferrer"
              class="hover:text-white transition-colors"
            >
              Chat on Matrix
            </a>
          </li>
          <li>
            {CONTACT.address.street}, {CONTACT.address.postal}
            {CONTACT.address.city}, {CONTACT.address.country}
          </li>
        </ul>
      </div>

      <div>
        <h5 class="text-lg font-semibold mb-4 text-white">Resources</h5>
        <ul class="space-y-3 text-sm text-blue-200">
          <li>
            <a
              href={CTA_BUTTONS.docs.href}
              class="hover:text-white transition-colors"
            >
              Documentation
            </a>
          </li>
          <li>
            <a
              href={SOCIAL.github}
              target="_blank"
              rel="noopener noreferrer"
              class="hover:text-white transition-colors"
            >
              GitHub
            </a>
          </li>
          <li>
            <a
              href="https://docs.google.com/presentation/d/1BETx1jXJ2UVzv3uR0uvwkV_rwzoFIJVvCIO5ljrWck4/export/pdf"
              target="_blank"
              rel="noopener noreferrer"
              class="hover:text-white transition-colors"
            >
              Datasheet (PDF)
            </a>
          </li>
        </ul>
      </div>

      <div>
        <h5 class="text-lg font-semibold mb-4 text-white">
          {NEWSLETTER_CONTENT.heading}
        </h5>
        <p class="text-sm text-blue-200 mb-4">
          {NEWSLETTER_CONTENT.description}
        </p>
        <form
          action={NEWSLETTER_CONTENT.formAction}
          method="post"
          target="_blank"
          class="relative"
        >
          <input
            type="email"
            name="EMAIL"
            placeholder={NEWSLETTER_CONTENT.placeholder}
            required
            class="w-full px-4 py-2.5 pr-24 text-sm border border-blue-700 bg-[#073763] text-white placeholder-blue-300 rounded-lg focus:outline-none focus:border-blue-400 focus:ring-1 focus:ring-blue-400"
          />
          <div hidden>
            <input
              type="hidden"
              name="tags"
              value={NEWSLETTER_CONTENT.hiddenTag}
            />
          </div>
          <div style="position: absolute; left: -5000px;" aria-hidden="true">
            <input
              type="text"
              name={NEWSLETTER_CONTENT.honeypotName}
              tabindex="-1"
              value=""
            />
          </div>
          <button
            type="submit"
            class="absolute right-1 top-1/2 -translate-y-1/2 px-4 py-1.5 bg-white text-[#073763] text-sm font-medium rounded-md hover:bg-blue-50 transition-colors"
          >
            {NEWSLETTER_CONTENT.buttonText}
          </button>
        </form>
        <p class="text-xs text-blue-300 mt-3">
          {NEWSLETTER_CONTENT.disclaimerPrefix}
          <a href="/privacy" class="underline"
            >{NEWSLETTER_CONTENT.privacyLinkText}</a
          >{NEWSLETTER_CONTENT.disclaimerSuffix}
        </p>
      </div>
    </div>

    <div
      class="mt-10 pt-6 border-t border-blue-800/50 text-sm text-blue-300 flex flex-col md:flex-row justify-between items-center gap-4"
    >
      <div>
        &copy; {new Date().getFullYear()} Abstract Machines. All rights reserved.
      </div>
      <div class="flex gap-6 text-blue-200">
        <a href="/terms" class="hover:text-white transition-colors"
          >Terms of service</a
        >
        <a href="/privacy" class="hover:text-white transition-colors"
          >Privacy Policy</a
        >
        <a href="/imprint" class="hover:text-white transition-colors"
          >Imprint</a
        >
      </div>
    </div>
  </div>
</footer>
