---
interface Props {
  title: string;
  icon?: string;
  class?: string;
}

const { title, icon, class: className = '' } = Astro.props;
---

<div class={`p-6 rounded-xl bg-linear-to-br from-white to-neutral-50 border border-neutral-200 hover:shadow-medium transition-shadow ${className}`}>
  {icon && <div class="text-4xl mb-4">{icon}</div>}
  <h3 class="font-bold text-xl mb-3 text-[#073763]">{title}</h3>
  <div class="text-base text-neutral-600">
    <slot />
  </div>
</div>
