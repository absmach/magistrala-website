---
interface Props {
  src: string;
  alt: string;
  class?: string;
}

const { src, alt, class: className = '' } = Astro.props;
---

<div class:list={['screenshot-frame', className]}>
  <div class="screenshot-frame-bar">
    <span class="screenshot-frame-dot"></span>
    <span class="screenshot-frame-dot"></span>
    <span class="screenshot-frame-dot"></span>
  </div>
  <img src={src} alt={alt} loading="lazy" />
</div>
