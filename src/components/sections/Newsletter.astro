---
import { NEWSLETTER_CONTENT } from '../../config/home';
---

<section class="py-12 px-4 bg-white border-t border-neutral-100">
  <div class="max-w-xl mx-auto text-center">
    <h3 class="mb-2">{NEWSLETTER_CONTENT.heading}</h3>
    <p class="text-sm text-neutral-500 mb-6">{NEWSLETTER_CONTENT.description}</p>
    <form
      action={NEWSLETTER_CONTENT.formAction}
      method="post"
      target="_blank"
      class="flex gap-2 max-w-md mx-auto"
    >
      <input
        type="email"
        name="EMAIL"
        placeholder={NEWSLETTER_CONTENT.placeholder}
        required
        class="flex-1 px-4 py-2.5 text-sm border border-neutral-200 rounded-lg focus:outline-none focus:border-[#073763] focus:ring-1 focus:ring-[#073763]"
      />
      <div hidden>
        <input type="hidden" name="tags" value={NEWSLETTER_CONTENT.hiddenTag} />
      </div>
      <div style="position: absolute; left: -5000px;" aria-hidden="true">
        <input type="text" name={NEWSLETTER_CONTENT.honeypotName} tabindex="-1" value="" />
      </div>
      <button
        type="submit"
        class="px-5 py-2.5 bg-[#073763] text-white text-sm font-medium rounded-lg hover:bg-[#0a4a7a] transition-colors shrink-0"
      >
        {NEWSLETTER_CONTENT.buttonText}
      </button>
    </form>
    <p class="text-xs text-neutral-400 mt-3">
      {NEWSLETTER_CONTENT.disclaimerPrefix} <a href={NEWSLETTER_CONTENT.privacyLinkHref} class="underline">{NEWSLETTER_CONTENT.privacyLinkText}</a>{NEWSLETTER_CONTENT.disclaimerSuffix}
    </p>
  </div>
</section>
